# Gitgenix Environment Variables
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_NAME=Gitgenix
NEXT_PUBLIC_APP_URL=https://gitgenix.netlify.app
NEXT_PUBLIC_APP_VERSION=1.0.0

# Google Analytics Configuration
# Get these from Google Analytics 4 dashboard
# GA_ID format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=
# PROPERTY_ID is the numeric ID from GA4 (optional)
NEXT_PUBLIC_GA_PROPERTY_ID=

# Analytics Settings
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Firebase Configuration (if using Firebase Analytics)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-auth-domain-here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id-here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-storage-bucket-here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id-here
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id-here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id-here

# API Configuration
NEXT_PUBLIC_API_BASE_URL=/api
NEXT_PUBLIC_API_TIMEOUT=5000

# Performance Settings
NEXT_PUBLIC_ENABLE_PERFORMANCE_OPTIMIZATIONS=true
NEXT_PUBLIC_ENABLE_VISITOR_TRACKING=true

# Feature Flags
NEXT_PUBLIC_ENABLE_ADMIN_MODE=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Admin Configuration
NEXT_PUBLIC_ADMIN_EMAIL=your-admin-email-here

# Development Settings
NEXT_PUBLIC_ENABLE_ANALYTICS_IN_DEV=false

# Note: Gitgenix now uses a local analytics system that doesn't require 
# external API keys or configuration. All analytics are tracked locally 
# using session-based storage for privacy compliance.